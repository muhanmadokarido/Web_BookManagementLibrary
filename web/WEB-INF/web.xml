        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/Dispatcher</url-pattern>
        <url-pattern>/login.form</url-pattern>
        <url-pattern>/login.action</url-pattern>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/myprofile</url-pattern>   
         <url-pattern>/userEdit.form</url-pattern> 
          <url-pattern>/userEdit.save</url-pattern> 
        <url-pattern>/Editmyprofile.save</url-pattern>
        <url-pattern>/my_books_manegment</url-pattern>
          <url-pattern>/one_books_manegment</url-pattern>      
        <url-pattern>/user_manegment</url-pattern>
        <url-pattern>/UserDisableEnable</url-pattern>
