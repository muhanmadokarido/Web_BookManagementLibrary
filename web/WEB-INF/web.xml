        <url-pattern>/add_book.save</url-pattern>         
        <url-pattern>/bookEdit.form</url-pattern>  
        <url-pattern>/bookEdit.save</url-pattern>  
        <url-pattern>/bookLend.form</url-pattern>                             
        <url-pattern>/bookLend.save</url-pattern> 
        <url-pattern>/bookDelete</url-pattern> 
        <url-pattern>/by_me_books_manegment</url-pattern> 
        <url-pattern>/to_me_books_manegment</url-pattern>
        <url-pattern>/bookReturn</url-pattern> 
        <url-pattern>/OthersBooks</url-pattern>
        <url-pattern>/AskLend</url-pattern>
        <url-pattern>/viewNotifications</url-pattern>
        <url-pattern>/notificationReaded</url-pattern>
        

       <url-pattern>/bookAskReturn</url-pattern>                      
                     
    </servlet-mapping>
      <welcome-file-list>
        <welcome-file>login.form</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
